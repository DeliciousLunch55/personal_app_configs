
"DeliciousLunch55 .vimrc configs

"Remap leader to ,
let mapleader=","

"Look and feel configuration
set tabstop=4
set number
set relativenumber
syntax enable
set showcmd
set lazyredraw
set wildmenu
set showmatch
set smartindent

"Search function configuration
set hlsearch
set incsearch
noremap <leader><space> :nohlsearch<CR>

"Plugins
call plug#begin('~/.vim/plugged')

Plug 'morhetz/gruvbox'

call plug#end()
